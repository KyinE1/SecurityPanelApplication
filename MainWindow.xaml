        <Button Width="70" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,138,0,0" FontSize="40" Click="Button_Click_1"/>
        <Button Width="70" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="228,138,0,0" FontSize="40" Click="Button_Click_2"/>
