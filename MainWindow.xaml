        <Button Width="70" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="298,196,0,0" FontSize="40" Click="Button_Click_6"/>

        <Button Width="70" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,252,0,0" FontSize="40" Click="Button_Click_7"/>
        <Button Width="70" Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="228,252,0,0" FontSize="40" Click="Button_Click_8"/>
        <Button Width="70" Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="298,252,0,0" FontSize="40" Click="Button_Click_9"/>
    </Grid>
